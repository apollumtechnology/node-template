{
  "name": "node-template",
  "version": "0.0.1",
  "description": "Template for NodeJS applications with TypeScript, unit testing and following good programming practices",
  "repository": "git@github.com:apollumtechnology/node-template.git",
  "author": "Bruno Petrolini <brunopetrolini@hotmail.com>",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build": "tsup src",
    "start": "tsx src/server.ts",
    "start:dev": "tsx watch src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vitest/coverage-c8": "^0.29.1",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "tsup": "^6.6.3",
    "tsx": "^3.12.3",
    "typescript": ">=4.4",
    "vitest": "^0.29.1"
  },
  "engines": {
    "node": ">=16.13.x"
  },
  "dependencies": {
    "husky": "^8.0.3"
  }
}
